<% if session.user == @user %>
  <%= partial "command" %>
<% end %>

<h1>
  <%= t("Change Password of %s") % h(@user.login) %>
</h1>
<%= error_messages_for @user %>

<%= form_for @user, :action => resource(@user) do %>
  <%= tag :input, :type => :hidden, :name => :from, :value => :password %>
  <dl class="form">
    <dt>
      <%= label t('Password'), :for => :password %>
    </dt>
    <dd>
      <%= password_field :password, :class => :half %>
    </dd>
    <dt>
      <%= label t('Password Confirmation'), :for => :password_confirmation %>
    </dt>
    <dd>
      <%= password_field :password_confirmation, :class => :half %>
    </dd>
    <dt>
      <%= t("Are you sure?") %>
    </dt>
    <dd>
      <%= submit t("Update"), :class => :submit %>
    </dd>
  </dl>
<% end =%>
